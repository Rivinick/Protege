<%- include("./head.ejs"); %>

<div> 
    <div class="card-header">      
        <h4>Registro da Pessoa (Mestre)</h4> 
        <div class="form-group">     
            <label>Nome da Pessoa</label>    
            <input type="text" class="form-control form-control-sm" value="<%= dado.Nome %>" readonly>    
        </div>   
        <div class="form-group">     
            <label>CPF</label>    
            <input type="text" class="form-control form-control-sm" value="<%= dado.CPF %>" readonly>    
        </div>   
    </div>     
</div>    

<div class="card-header" style="margin-top: 20px;">  
    <ul class="nav nav-pills w-100">     
        <li class="nav-pill active">   
            <h4>Incluir novo Telefone (Detalhe)</h4>     
        </li>     
    </ul>     
    <div>  
        <div class="card-body">   
            <form action="/inserirTelefone/<%= dado.IdPessoa %>/<%= dado.IdTelefone %>" method="post">  
                <table class="table table-striped table-hover table-active">   
                    <tr>    
                        <td>Numero</td>   
                        <td><input class="form-control" type="text" name="Numero" value="<%= Numero %>" /></td>  
                    </tr>   
                    <tr>    
                        <td>Unidade da Saude</td>   
                        <td><input class="form-control" type="text" name="UnidadedaSaude" value="<%= UnidadedaSaude %>" /></td>  
                    </tr>   
                    <tr>    
                        <td colspan="2">    
                            <input class="btn btn-primary" type="submit" value="Inserir Telefone"/>    
                            <a href="/pessoas" class="btn btn-outline-primary btn-sm">Voltar</a>      
                        </td>    
                    </tr>   
                </table>   
            </form>   
        </div>    
    </div>
</div>

<footer>  
    <p>&copy; 2025 </p>  
</footer>  
</body>     
</html>