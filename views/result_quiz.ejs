<%- include("./head.ejs"); %>
<body>
    <div class="container" style="margin-top: 50px; padding-bottom: 50px;">
        
        <div class="card p-5 shadow-lg mb-5 text-center" style="max-width: 700px; margin: 0 auto; border-top: 10px solid #d32f2f;">
            <h1 style="color: #d32f2f; font-weight: bold;">Resultado Final</h1>
            <hr>
            
            <h3 class="mt-4 mb-4">
                Você acertou <br>
                <span style="font-size: 4rem; color: #009688; font-weight: bold;"><%= acertos %></span> <br>
                de <%= total %> questões!
            </h3>

            <div class="progress mb-4" style="height: 30px;">
                <% let porcentagem = (total > 0) ? (acertos / total) * 100 : 0; %>
                <div class="progress-bar <%= porcentagem >= 70 ? 'bg-success' : (porcentagem >= 50 ? 'bg-warning' : 'bg-danger') %>" 
                     role="progressbar" 
                     style="width: <%= porcentagem %>%; font-weight: bold;">
                    <%= Math.round(porcentagem) %>%
                </div>
            </div>

            <div class="mt-4"> 
                <a href="/responder-quiz" class="btn btn-outline-danger btn-lg mr-2">Tentar Novamente</a>
                <a href="/home" class="btn btn-primary btn-lg" style="margin-top: 10px;">Voltar ao Início</a>
            </div>
        </div>

        <h3 class="text-center text-secondary mb-4">Confira suas respostas:</h3>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <% for (const item of detalhes) { %>
                    <div class="card mb-3" style="border-left: 10px solid <%= item.acertou ? '#28a745' : '#dc3545' %>;">
                        <div class="card-body">
                            <h5 class="card-title text-dark font-weight-bold">
                                <%= item.pergunta %>
                            </h5>
                            
                            <p class="card-text mb-1">
                                <strong>Sua resposta:</strong> 
                                <span class="<%= item.acertou ? 'text-success' : 'text-danger' %>">
                                    <%= item.suaResposta %> 
                                    <% if(item.acertou) { %> <i class="fas fa-check-circle"></i> <% } else { %> <i class="fas fa-times-circle"></i> <% } %>
                                </span>
                            </p>

                            <% if (!item.acertou) { %>
                                <p class="card-text text-muted" style="background-color: #f8f9fa; padding: 5px; border-radius: 5px;">
                                    <small>Resposta Correta: <strong><%= item.respostaCerta %></strong></small>
                                </p>
                            <% } %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>

    </div>
</body>
</html>