        <label>CPF</label>    
        <input type="text" class="form-control form-control-sm" name="CPF" value="<%= dados.CPF %>">    
    </div>   
    <div class="form-group">     
        <label>Nome</label>    
        <input type="text" class="form-control form-control-sm" name="Nome" value="<%= dados.Nome %>">    
