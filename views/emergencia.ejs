<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Serviços de Emergência - Protege+</title>
  
  <link rel="stylesheet" href="/css/emergencia.css" />
  
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
  <link rel="icon" href="/logo.png" type="image/png">
</head>
<body>
  <div class="emergency-container">
    
    <%- include('./partials/navbar'); %>

    <div class="search-wrap">
      <input id="search" type="search" placeholder="Pesquisar" />
    </div>

    <section class="emergency-section" id="services-list">
      </section>
  </div>

  <script>
    const listContainer = document.getElementById('services-list');
    const searchInput = document.getElementById('search');
    let allCards = [];

    document.addEventListener('DOMContentLoaded', () => {
      getGeolocation();
      setupSearchFilter();
    });

    function getGeolocation() {
      if ('geolocation' in navigator) {
        listContainer.innerHTML = '<p style="color: white; text-align: center; padding-top: 20px;">Obtendo sua localização...</p>';
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;
            fetchHospitais(lat, lon);
          },
          (error) => {
            console.error('Erro ao obter localização:', error);
            listContainer.innerHTML = '<p style="color: white; text-align: center; padding-top: 20px;">Não foi possível obter sua localização.</p>';
          }
        );
      } else {
        listContainer.innerHTML = '<p style... >Geolocalização não é suportada.</p>';
      }
    }

    async function fetchHospitais(latitude, longitude) {
      try {
        const response = await fetch(`/api/emergencia/proximos?lat=${latitude}&lon=${longitude}`);
        const hospitais = await response.json(); 

        listContainer.innerHTML = ''; 
        
        if (!hospitais || hospitais.length === 0) {
           listContainer.innerHTML = '<p style="color: #D90D1E; text-align: center; padding-top: 20px; font-weight: bold;">Nenhum hospital encontrado no raio de 15km.</p>';
           return;
        }

        hospitais.forEach(hospital => {
          const art = document.createElement('article');
          art.className = 'card-service';
          
          const hospitalNome = hospital.nome || 'Serviço';
          const hospitalTelefone = hospital.telefone || '—';
          const hospitalDistancia = hospital.distancia || '—';

          // --- ✨ MUDANÇA AQUI: Lógica de Link Duplo ✨ ---
          let infoHtml = '';
          const isPhone = /^\s*\(?\d/.test(hospitalTelefone); // Verifica se é um telefone
          
          if (isPhone) {
            // É um telefone, cria um link <a> de LIGAÇÃO
            const telLink = hospitalTelefone.replace(/[^0-9+]/g, ''); 
            infoHtml = `
              <a href="tel:${telLink}" class="card-info-group card-phone-link" title="Ligar para ${hospitalTelefone}">
                <i class="fas fa-phone"></i>
                <span>${hospitalTelefone}</span>
              </a>
            `;
          } else if (hospitalTelefone !== '—') {
            // É um endereço, cria um link <a> de MAPA
            const encodedAddress = encodeURIComponent(hospitalTelefone);
            infoHtml = `
              <a href="https://www.google.com/maps/search/?api=1&query=${encodedAddress}" target="_blank" class="card-info-group card-phone-link" title="Ver endereço no mapa">
                <i class="fas fa-map-marked-alt"></i>
                <span>${hospitalTelefone}</span>
              </a>
            `;
          } else {
            // É '—', cria um <div> normal (sem link)
            infoHtml = `
              <div class="card-info-group">
                <i class="fas fa-phone"></i>
                <span>${hospitalTelefone}</span>
              </div>
            `;
          }
          // --- Fim da Lógica ---

          // Monta o HTML final
          art.innerHTML = `
            <div class="card-content">
              <div class="card-title">${hospitalNome}</div>
              
              <div class="card-info-line">
                ${infoHtml} <div class="card-distance">
                  <i class="fas fa-map-marker-alt"></i>
                  <span>${hospitalDistancia}</span>
                </div>
              </div>
            </div>`;
          listContainer.appendChild(art);
        });

        allCards = Array.from(document.querySelectorAll('.card-service'));

      } catch (err) {
        console.error('Erro ao buscar API:', err);
      }
    }

    // Função de pesquisa
    function setupSearchFilter() {
      searchInput.addEventListener('input', () => {
        const query = searchInput.value.trim().toLowerCase();
        allCards.forEach(card => {
          const title = card.querySelector('.card-title').textContent.toLowerCase();
          const phoneSpan = card.querySelector('.card-info-group span');
          const phone = phoneSpan ? phoneSpan.textContent.toLowerCase() : '';
          
          const isMatch = title.includes(query) || phone.includes(query);
          card.style.display = isMatch ? 'flex' : 'none';
        });
      });
    }
  </script>
</body>
</html>