<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Serviços de Emergência - Protege+</title>
  <link rel="stylesheet" href="/css/emergencia.css" />
  <link rel="icon" href="/logo.png" type="image/png">
  <script src="/js/api.js"></script>
</head>
<body>
  <div class="emergency-container">
    <!-- Cabeçalho (PROTEGE + e Logout) -->
    <h1 class="app-title">PROTEGE +</h1>
    <div class="logout-area" onclick="logout()">
      <span class="logout-text">Logout</span>
    </div>

    <!-- Barra de pesquisa -->
    <div class="search-wrap">
      <input id="search" type="search" placeholder="Pesquisar" />
    </div>

    <!-- Lista/Seção de serviços de emergência (cards) -->
    <section class="emergency-section" id="services-list">Carregando serviços...</section>
  </div>

  <script>
    const listContainer = document.getElementById('services-list');
    const searchInput = document.getElementById('search');
    let allCards = []; // Guarda os cards para a pesquisa

    // 1. Roda quando a página carrega
    document.addEventListener('DOMContentLoaded', () => {
      getGeolocation(); // Inicia o processo de geolocalização
      setupSearchFilter(); 
    });

    // 2. GEOLOCALIZAÇÃO: Pede a localização ao usuário
    function getGeolocation() {
      if ('geolocation' in navigator) {
        listContainer.innerHTML = '<p style="color: white; text-align: center;">Obtendo sua localização...</p>';
        
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;
            fetchHospitais(lat, lon);
          },
          (error) => {
            console.error('Erro ao obter localização:', error);
            listContainer.innerHTML = '<p style="color: white; text-align: center;">Não foi possível obter sua localização.</p>';
          }
        );
      } else {
        listContainer.innerHTML = '<p style="color: white; text-align: center;">Geolocalização não é suportada.</p>';
      }
    }

    // 3. API: Busca os hospitais no back-end
    async function fetchHospitais(latitude, longitude) {
      try {
        const response = await fetch(`/api/emergencia/proximos?lat=${latitude}&lon=${longitude}`);
        const hospitais = await response.json(); 

        listContainer.innerHTML = ''; 
        
        if (!hospitais || hospitais.length === 0) {
           listContainer.innerHTML = '<p style="color: white; text-align: center;">Nenhum hospital encontrado.</p>';
           return;
        }

        hospitais.forEach(hospital => {
          const art = document.createElement('article');
          art.className = 'card-service';
          art.innerHTML = `
            <div class="card-content">
              <div class="card-top-row">
                <div class="card-title">${hospital.nome || 'Serviço'}</div>
              </div>
              <div class="card-bottom-row">
                <div class="card-phone">${hospital.telefone || '—'}</div>
                <div class="card-distance">${hospital.distancia || '—'}</div>
              </div>
            </div>`;
          listContainer.appendChild(art);
        });

        // Atualiza a lista 'allCards' para a pesquisa funcionar
        allCards = Array.from(document.querySelectorAll('.card-service'));

      } catch (err) {
        console.error('Erro ao buscar API:', err);
      }
    }

    // Esta função filtra a lista de cards
    function setupSearchFilter() {
      // O evento 'input' dispara toda vez que você digita ou apaga uma letra
      searchInput.addEventListener('input', () => {
        const query = searchInput.value.trim().toLowerCase();
        
        allCards.forEach(card => {
          // Pega o texto do título e do telefone/endereço
          const title = card.querySelector('.card-title').textContent.toLowerCase();
          const phone = card.querySelector('.card-phone').textContent.toLowerCase();
          
          // Verifica se a query está no título OU no telefone/endereço
          const isMatch = title.includes(query) || phone.includes(query);
          
          // O seu .card-service usa 'display: flex', então usamos 'flex' para mostrar
          card.style.display = isMatch ? 'flex' : 'none';
        });
      });
    }
  </script>
</body>
</html>