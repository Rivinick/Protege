<%- include("./head.ejs"); %>
<form action="/novaQuestao" method="post"> 
    <h4>Nova Pergunta</h4>
    <div class="form-group"> 
        <label>Enunciado</label> 
        <input type="text" name="Titulo" class="form-control" required> 
    </div> 
    <div class="row">
        <div class="col">
            <label>Categoria</label> 
            <input type="text" name="Categoria" class="form-control"> 
        </div>
        <div class="col">
            <label>Dificuldade</label> 
            <select name="Dificuldade" class="form-control">
                <option>Fácil</option><option>Média</option><option>Difícil</option>
            </select>
        </div>
    </div>
    <hr>
    <h4>Primeira Alternativa</h4> 
    <div class="form-group"> 
        <label>Texto da Opção</label> 
        <input class="form-control" type="text" name="Texto" required /> 
    </div> 
    <div class="form-group"> 
        <label>É a correta?</label> 
        <select name="EhCorreta" class="form-control">
            <option value="Não">Não</option><option value="Sim">Sim</option>
        </select>
    </div> 
    <br> 
    <input class="btn btn-primary" type="submit" value="Salvar Questão" /> 
    <a href="/quiz" class="btn btn-outline-primary btn-sm">Voltar</a> 
</form> 
<footer><p>&copy; 2025</p></footer></div></body></html>